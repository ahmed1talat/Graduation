 @model Client;
 <div class="main-panel">
            <div class="main-content">
               <div class="content-wrapper">
                  <div class="container-fluid">
           
                    <section id="horizontal-form-layouts">
                   
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title-wrap bar-success">
                                            <h4 class="card-title" id="horz-layout-basic">Clients</h4>
                                        </div>
                                        <p class="mb-0">This is the basic horizontal form with labels on left and cost estimation form is the default position.</p>
                                    </div>
                                    <div class="card-body">
                                        <div class="px-3">
                                            <form asp-action="SaveClient" class="form form-horizontal">
                                             
                                                   <div class="form-group row">
                                                        <label asp-for="ClientName" class="col-md-3 label-control" >Client Name:</label>
                                                        <div class="col-md-9">
                                                            <input asp-for="ClientName" class="form-control" >
                                                            <span asp-validation-for="ClientName" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label asp-for="Phone" class="col-md-3 label-control" >Phone :  </label>
                                                        <div class="col-md-9">
                                                            <input asp-for="Phone" class="form-control" >
                                                             <span asp-validation-for="Phone" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label asp-for="Number" class="col-md-3 label-control">Number : </label>
                                                        <div class="col-md-9">
                                                            <input asp-for="Number" class="form-control" disabled >
                                                             <span asp-validation-for="Number" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label asp-for="Address" class="col-md-3 label-control" >Address: </label>
                                                        <div class="col-md-9">
                                                            <input asp-for="Address"  class="form-control">
                                                            <span asp-validation-for="Address" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                 
                                   
                                                         <div class="form-group text-center">
                                                           <input type="submit" value="save" class="btn btn-primary" />
                                                         </div>
                                                      
                    
                                                </form></div>
                    
                                                <div class="form-actions">
                                                    <button type="button" class="btn btn-danger mr-1">
                                                        <i class="icon-trash"></i> Cancel
                                                    </button>
                                                   
                                                </div>
                                            
                                        </div>
                                    
                                </div>
                            </div>
                            </div>
                        </section>
                  </div>
               </div>
               </div>
               </div>
